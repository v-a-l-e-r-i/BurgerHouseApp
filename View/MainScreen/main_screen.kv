<MainScreenView>:
    md_bg_color: "f0f0f0"

    MDScrollView:
        do_scroll_x: False
        do_scroll_y: True

        MDBoxLayout:
            orientation: 'vertical'
            padding: 15
            spacing: 15
            adaptive_height: True

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 60
                radius: 15

                MDAnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
                    MDIconButton:
                        icon: "hamburger-plus"
                        theme_icon_color: "Custom"
                        icon_color: "#292929"
                        pos_hint: {'center_x': 0.5, 'center_y':0.5}
                        on_press: root.manager.current = 'create screen'

                MDLabel:
                    text: "BurgerHouse"
                    font_size: 20
                    halign: "center"
                    font_name: './View/MainScreen/components/font/RobotoSlab-Regular.ttf'
                    bold: True
                    theme_text_color: "Custom"
                    text_color: "#292929"

                MDAnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'center'
                    MDIconButton:
                        icon: "account-credit-card"
                        theme_icon_color: "Custom"
                        icon_color: "#292929"
                        pos_hint: {'center_x': 0.5, 'center_y':0.5}
                        on_press: root.manager.current = 'pay screen'

            BigCard:


            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 250

                MDLabel:
                    text: "Б у р г е р и"
                    theme_text_color: "Custom"
                    text_color: "#292929"
                    font_size: 20
                    font_name: './View/MainScreen/components/font/RobotoSlab-Regular.ttf'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDScrollView:
                    do_scroll_x: True
                    do_scroll_y: False

                    MDGridLayout:
                        id: burger_grid
                        padding: 10
